<div class="container-fluid">
  <div class="row">
    <div class="col-2 m-5 mx-auto border border-dark">
      <div class="mt-3">
        <table class="table table-borderless table-dark text-center" style="opacity: 0.8;">
          <thead>
            <tr>
              <th class="text-center"> <h5>ジャンル</h5></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col-md-7 offset-1 mx-auto m-5">
      <%= image_tag 'strawberry.jpg' %>
      <% @product.each do |item| %>
             <div class="col">
               <div class="card mx-auto mt-4 bg-dark text-white">
                 <%= link_to product_path(product) do %>
                   <%= attachment_image_tag product, :image, size:"200x200", class:"card-img-top", fallback:"no-img.png" %>
                  <% end %>
                    <div class="card-body">
                      <div class="card-title">
                        <%= link_to product.name, product_path(product), class:"text-white" %>
                      </div>
                        <div class="card-text">
                         <%= (product.with_tax_price).to_s(:delmited) + "円" %>
                        </div>
                    </div>
               </div>
             </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="text-right mb-3">
  <%= link_to "全ての商品を見る>>" %>
</div>
  </div>
</div
    
          