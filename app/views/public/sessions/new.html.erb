<div class= "container">
  <h1 class="itle_h1 bg-light w-25">ログイン</h1>
  <div class="row">
    <div class=" col-12">
      <h3 class="title_h2 bg-light w-75">会員の方はこちらからログイン</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group col-xs-9">
        <%= f.label :"メールアドレス", class: "col-sm-5" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-8" %>
      </div>

      <div class="field form-group col-xs-9">
        <%= f.label :"パスワード", class: "col-sm-4" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-8" %>
      </div>

        <div class="actions col-xs-9 pull-right">
          <%= f.submit "ログイン", class: "btn btn-primary btn-sm col-xs-7" %>
        </div>

      <% end %>
      <div class="col-xs-9">
        <h3 class="title_h2 bg-light w-50">登録がお済みではない方</h3>
        <p class="new-link">
          <%= link_to "こちら", new_registration_path(resource_name), data: {"turbolinks" => false}, class: "btn-link" %>から新規登録を行ってください。
        </p>
      </div>
    </div>
  </div>
</div>