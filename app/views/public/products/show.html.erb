<div class="row">
<%= render 'sidebar', genres: @genres %>
	<br>
	<div class="col-xs-5">
		<p class="item-content"><%= image_tag @product.get_image, size: "100×100" %></p>
	</div>
 <%= form_with model: @cart_item, url: cart_items_path, method: :POST do |f| %>
	<div class="col-xs-5">
		
		<h3><%= @product.name %></h3>
		<p><%= @product.explanation %></p>

	</div>



	<div class="col-xs-2">
	</div>
	<div class="col-xs-5">

			<p class="item-quantity", style="font-family: arial black">¥ <%= ((@product.price*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
				<span>　　</span><%= f.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
		</div>
<%= f.hidden_field :customer_id, :value => current_customer.id %>
<%= f.hidden_field :product_id, :value => @product.id %>
		<div class="col-xs-5">
		  <p><%= f.submit "カートに入れる", class:"btn btn-primary" %></p>
		</div>
	
	</div>
	<% end %>
</div>