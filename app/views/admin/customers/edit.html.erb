 <div class="row">
  <div class="col-md-8 offset-md-1">
      <h2><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
      
   <%= form_for(@customer, url: admin_customer_path) do |f| %>

  <table class="row table">
    <tr>
      <th class="col-xs-2"><%= f.label :会員ID %></th>
      <td class="col-xs-10"><%= f.text_field :id  , class:"form-control"%></td>
    </tr>

    <tr>
      <th><%= f.label :氏名 %></th>
      <td><%= f.text_field :last_name, class:"form-control" %><br>
          <%= f.text_field :first_name, class:"form-control" %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :フリガナ %></th>
      <td><%= f.text_field :last_name_kana, class:"form-control" %><br>
      <%= f.text_field :first_name_kana, class:"form-control" %>
      </td>
    </tr>

    <tr>
      <th><%= f.label :郵便番号 %></th>
      <td><%= f.text_field :zip_code, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :住所 %></th>
      <td><%= f.text_field :address, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :電話番号 %></th>
      <td><%= f.text_field :telephone_number, class:"form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.text_field :email , class:"form-control"%></td>
    </tr>

    <tr>
      <th><%= f.label :会員ステータス %>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :is_deleted, "退会" %>
      </th>
    </tr>
  </table>


      <div class="row text-right">
        <%= f.submit "変更を保存する" ,class: "btn btn-success " %>
      </div>
  <% end %>