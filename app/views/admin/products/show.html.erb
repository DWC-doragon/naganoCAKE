<div class="row">
  <div class="col-xs-4 ml-5 mt-5">
      <h2>商品詳細</h2><br>
      <%= image_tag @product.get_image, width: '50%', height: '50%' %>
  </div><br>

      <div class="col-xs-8 ml-5 ">
        <table class="table">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @product.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @product.explanation %></td>
            </tr>

            <tr>
              <td>税込価格</td>
              <td><%= @product.add_tax_price.to_s(:delimited) %> 円</td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td>
              <% if @product.is_active  %>
              販売中
              <% else %>
              販売停止中
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col-md-offset-1 col-md-2 text-right">
          <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-primary" %>
        </div>
      </div>
    </div>