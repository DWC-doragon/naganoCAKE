<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1 my-3">
      <h2 class="head-line title_h2 text-center bg-light w-50 mx-auto">注文履歴一覧</h2>
    </div>
  </div>

    <table class="table" border="2">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>

         
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.time.strftime("%Y年%m月%d日 %H:%M:%S"), admin_order_path(order.id) %></td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td><%= order.orderd_products.sum(:quantity) %></td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
      <%= paginate @orders %>
    </table>

  </div>

</div>
