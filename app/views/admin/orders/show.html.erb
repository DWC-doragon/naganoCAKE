<div class="container">
  <div class="row py-4">
    <h4>注文履歴詳細</h4>
  </div>

    <div class="col-md-8 offset-md-1">
      <table class="row table">

        <tbody>
          <tr>
            <th>購入者</th>
            <td><%= @customer.last_name %>
                <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.zip_code %><br><%= @order.address %><br><%= @order.name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td class="align-middle">
            <%= form_with model: [:admin, @order] do |f| %>
              <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
              <%= f.submit "更新", class:"btn btn-success d-inline-block ml-4" %>
            <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>


 <div class="form-group">
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-8">
        <table class="table table-bordered">

        <thead>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orderd_products.each do |orderd_product| %>
          <tr>
            <td><%= orderd_product.product.name %></td>
            <td><%= orderd_product.product.price %></td>
            <td><%= orderd_product.quantity %></td>
            <td><%= @subtotal = orderd_product.product.price * orderd_product.quantity %></td>
                <% @total += @subtotal %>
           
            <td class="align-middle">
               <%= form_with model: [:admin, orderd_product] do |f| %>
              <%= f.select :order_details, OrderdProduct.order_details.keys.map {|k| [I18n.t("enums.orderd_product.order_details.#{k}"), k]} %>
              <%= f.submit "更新", class:"btn btn-success d-inline-block ml-4" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

 
    <div class = "col-sm-3 mb-5" >
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @total + @order.postage %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

