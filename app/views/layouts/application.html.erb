<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border border-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-5" href="/"><span>ながのけーき</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>

            <li>
              <%= link_to admin_products_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                商品一覧
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                会員一覧
              <% end %>
            </li>
            <li>
              <%= link_to about_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                注文履歴一覧
              <% end %>
            </li>
            <li>
              <%= link_to admin_genres_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                ジャンル一覧
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                ログアウト
              <% end %>
            </li>
            


            <br>

              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword,placeholder: "検索", class: "search-text"%>
              <% end %>



            <% else %>

            <% if customer_signed_in? %>
            <li class="mt-5">
              ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！
            </li>
            <li>
              <%= link_to customers_my_page_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                マイページ
              <% end %>
            </li>
            <li>
              <%= link_to products_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                商品一覧
              <% end %>
            </li>
            <li>
              <%= link_to cart_items_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                カート
              <% end %>
            </li>
            <li>
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                ログアウト
              <% end %>
            </li>
              <br>

              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword,placeholder: "検索", class: "search-text"%>
              <% end %>

              <% else %>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to products_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                商品一覧
              <% end %>

            </li>
            <li>
              <%= link_to new_customer_registration_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                新規登録
              <% end %>
            </li>
            <li>
              <%= link_to  new_customer_session_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                ログイン
              <% end %>
            </li>
            <li>
              <%= link_to  new_admin_session_path, class: 'nav-link btn btn-outline-secondary text-dark' do %>
                管理者ログイン
              <% end %>
            </li>

              <br>

              <%= form_with url: search_path, method: :get, local: true do |f| %>
                <%= f.text_field :keyword,placeholder: "検索", class: "search-text"%>
              <% end %>

            <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="border border-dark">
        <div class="container">
          <div class="small text-center text-muted" style="margin: 50px 0;">ながのけーき
          </div>
        </div>
</footer>
  </body>
</html>
